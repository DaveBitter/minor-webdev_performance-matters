extends ../layout.pug

block content
	section#movie
		article
			header
				h1=movie.title
				sup=movie.tagline
			hr
			.content
				img(src=movie.poster_path, alt='poster ' + movie.title, title='poster ' + movie.title)
				.info
					h3 Summary
					p=movie.overview
					ul
						li
							h4 Budget (USD)
							if movie.budget
								p=movie.budget
							else
								p currently unknown

						li
							h4 Revenue (USD)
							if movie.revenue
								p=movie.revenue
							else
								p currently unknown
						li
							h4 Release date
							if movie.release_date
								p=movie.release_date
							else
								p currently unknown
						li
							h4 Runtime
							if movie.runtime
								p=movie.runtime
							else
								p currently unknown
						li
							h4 Check on IMDB
							a(href=movie.imdb_link, target='_blank', title='view more information about the movie ' + movie.title)=movie.imdb_link